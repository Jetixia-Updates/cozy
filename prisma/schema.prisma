// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  firstName       String
  lastName        String
  phone           String?
  password        String?
  role            Role      @default(CUSTOMER)
  membershipType  Membership @default(BASIC)
  walletBalance   Float     @default(0)
  loyaltyPoints   Int       @default(0)
  avatar          String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  bookings        Booking[]
  payments        Payment[]

  @@map("users")
}

model Room {
  id              String    @id @default(cuid())
  name            String
  type            String
  capacity        Int
  floor           Int
  area            Float
  pricePerHour    Float
  pricePerDay     Float
  pricePerMonth   Float
  amenities       String[]
  status          RoomStatus @default(AVAILABLE)
  description     String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  seats           Seat[]
  bookings        Booking[]

  @@map("rooms")
}

model Seat {
  id              String    @id @default(cuid())
  roomId          String
  seatNumber      String
  row             String
  seatType        SeatType  @default(STANDARD)
  pricePerHour    Float
  status          SeatStatus @default(AVAILABLE)
  amenities       String[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  room            Room      @relation(fields: [roomId], references: [id], onDelete: Cascade)
  bookings        Booking[]

  @@map("seats")
  @@unique([roomId, seatNumber])
}

model Booking {
  id              String    @id @default(cuid())
  userId          String
  roomId          String
  seatId          String?
  bookingNumber   String    @unique
  date            DateTime
  startTime       String
  endTime         String
  duration        Int
  totalAmount     Float
  status          BookingStatus @default(PENDING)
  paymentStatus   PaymentStatus @default(UNPAID)
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id])
  room            Room      @relation(fields: [roomId], references: [id])
  seat            Seat?     @relation(fields: [seatId], references: [id])
  payments        Payment[]

  @@map("bookings")
}

model Payment {
  id              String    @id @default(cuid())
  userId          String
  bookingId       String
  transactionId   String    @unique
  amount          Float
  method          PaymentMethod @default(CASH)
  status          PaymentStatus @default(PENDING)
  currency        String    @default("EGP")
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id])
  booking         Booking   @relation(fields: [bookingId], references: [id])

  @@map("payments")
}

enum Role {
  ADMIN
  STAFF
  CUSTOMER
}

enum Membership {
  BASIC
  SILVER
  GOLD
  PLATINUM
}

enum RoomStatus {
  AVAILABLE
  OCCUPIED
  MAINTENANCE
  RESERVED
}

enum SeatStatus {
  AVAILABLE
  OCCUPIED
  MAINTENANCE
}

enum SeatType {
  STANDARD
  PREMIUM
  EXECUTIVE
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum PaymentStatus {
  PENDING
  PAID
  PARTIAL
  REFUNDED
  FAILED
  UNPAID
}

enum PaymentMethod {
  CASH
  CARD
  WALLET
  BANK_TRANSFER
  ONLINE
}
